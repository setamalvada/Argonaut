<form action="/login" method="POST" class="mb-3" autocomplete="off">

  <div class="form-group form-signin">
    <label for="email" class="sr-only">Email address</label>
    <input name="email" type="email" class="form-control {{#if error.email }}is-invalid{{/if}}" id="email"
      placeholder="Enter email" value="{{ user.email }}">

    {{#if error.email}}
    <div class="invalid-feedback">
      {{error.email}}
    </div>
    {{/if}}
 
    <label for="password" class="sr-only">password</label>
    <input name="password" type="password" class="form-control {{#if error.password }}is-invalid{{/if}}" id="password"
      placeholder="password" value="{{ user.password }}">

    {{#if error.password}}
    <div class="invalid-feedback">
      {{error.password}}
    </div>
    {{/if}}

     <div class="checkbox mb-3">
        <label>
          <input type="checkbox" value="remember-me"> Remember me
        </label>
      </div>
  </div>

  <button type="submit" class="btn btn-outline-primary btn-lg">
    Log in
  </button>
  
</form>

