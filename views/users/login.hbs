<form action="/login" method="POST" class="mb-3" autocomplete="off">
  <div class="form-group">
    <label for="email">email</label>
    <input name="email" type="email" class="form-control {{#if error.email }}is-invalid{{/if}}" id="email"
      placeholder="Enter name" value="{{ user.email }}">

    {{#if error.email}}
    <div class="invalid-feedback">
      {{error.email}}
    </div>
    {{/if}}
  </div>

  <div class="form-group">
    <label for="password">password</label>
    <input name="password" type="password" class="form-control {{#if error.password }}is-invalid{{/if}}" id="password"
      placeholder="password" value="{{ user.password }}">

    {{#if error.password}}
    <div class="invalid-feedback">
      {{error.password}}
    </div>
    {{/if}}
  </div>

  <button type="submit" class="btn btn-primary">
    Log in
  </button>
</form>

<a href="/users/new" class="mb-3">Sign up</a>

<form action="/google" method="post" class="mb-3">
  <button class="btn btn-danger btn-block" type="submit">
    <i class="fa fa-google"></i>
    Login with Google
  </button>
</form>

<form action="/facebook" method="post" class="mb-3">
  <button class="btn btn-primary btn-block" type="submit">
    <i class="fa fa-facebook"></i> Login with Facebook
  </button>
</form>

<form action="/slack" method="post">
  <button class="btn btn-warning btn-block" type="submit">
    <i class="fa fa-slack"></i> Login with Slack
  </button>
</form>