{{!-- new map --}}
<div class="container">
  <div class="col-xs-7 ml-5 text-center">
        <h4 class="text-info">Create a new map from scratch</h4>
        <img class="card-img-top" src="../../images/map.png" alt="Card image cap">
        {{!-- <button type="button" class="btn btn-outline-info btn-block">Start</button> --}}
        <a href="/maps/new"> <button type="button" class="btn btn-outline-info btn-block">Start</button></a>
</div>

{{!-- Profile --}}
<div class="col-xs-3 ml-5 mt-4 text-center bord-rad">
          <h4 class="text-info">Hi, {{currentUser.name}}!</h4> 
          {{!-- <img class="card-img-top w-75" src="/../../images/avataaars.png" alt="Card image cap"> --}}
          <img src="{{currentUser.avatar}}" class="card-img-top w-75"/>
          
          <ul class="list-unstyled mt-5">
            <li>
                {{!-- <button type="button" class="btn btn-outline-info">Edit your profile</button> --}}
                <a href="/users/{{currentUser._id}}/editUser" class="btn btn-outline-info">Edit your profile</a>
            </li>
            {{!-- <li><button type="button" class="btn btn-outline-info">Change password</button></li> --}}
            <li><a href="https://docs.mapbox.com/" target="_blank" class="btn btn-outline-info">Documentation</a></li>
            <li><a href="https://docs.mapbox.com/help/" target="_blank" class="btn btn-outline-info">Help</a></li>
          </ul> 
</div>

{{!-- Maps --}}
<div>
    <div class="w-50">
            <h3 class="text-info text-center">Take a quick look at your maps</h3>
    </div>
    <main role="main">
        <div class="album py-5 bg-light">
            <div class="container">
                <div  class="row">
                {{#each maps}}
                    <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" src="../../images/example.jpg" alt="Card image cap">
                        <div class="card-body">
                        <h3 class="card-text">{{this.title}}</h3>
                        <p class="card-text">{{this.description}}</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                            <a href="/maps/{{this._id}}" type="button" class="btn btn-sm btn-outline-secondary">View</a>
                            <a type="button" class="btn btn-sm btn-outline-secondary">Edit</a>
                            </div>
                            <form class="d-inline" action="/maps/{{this.id}}/delete" method="POST">
                            <button class="btn btn-danger" type="submit">Delete</button>
                            </form>
                            <small class="text-muted">9 mins</small>
                        </div>
                        </div>
                    </div>
                    </div>
                {{/each}}
                </div>
            </div>              
        </div>
    </main>
</div>



