<main role="main">

      <section class="jumbotron text-center">
        <div class="container">
          <h1 class="jumbotron-heading">Community maps</h1>
          <p class="lead text-muted">Take a look to the most beautiful stories</p>
          <p>
            <a href="#" class="btn btn-primary my-2">Sort by popularity</a>
            <a href="#" class="btn btn-secondary my-2">Sort by time</a>
          </p>
        </div>
      </section>

      <div class="album py-5 bg-light">
        <div class="container">





        <div  class="row">
          {{#each maps}}
            <div class="col-md-4">
              <div class="card mb-4 box-shadow">
                <img class="card-img-top" src="../../images/example.jpg" alt="Card image cap">
                <div class="card-body">
                  <h3 class="card-text">{{this.title}}</h3>
                  <p class="card-text">{{this.description}}</p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <a href="/maps/{{this._id}}" type="button" class="btn btn-sm btn btn-primary">View</a>
                      <a href="/maps/{{this._id}}/edit" type="button" class="btn btn-sm btn btn-primary">Edit</a>
                    </div>
                    <form class="d-inline" action="/maps/{{this.id}}/delete" method="POST">
                      <button class="btn btn-danger" type="submit">Delete</button>
                    </form>
                    <small class="text-muted">9 mins</small>
                  </div>
                </div>
              </div>
            </div>
          {{/each}}
        </div>

      </div>
              
      </div>

    </main>
